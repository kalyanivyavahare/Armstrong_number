package practice;
import java.util.Scanner;
public class NaturalNumber {
	
		int sum=0;
		public static void main(String[] args) {
			Scanner sc=new Scanner(System.in);
			System.out.println("Enter the naturel number a");
			int a=sc.nextInt();
			NaturalNumber rfe=new NaturalNumber();
			System.out.println(rfe.sum1(a));
		}
	    public int sum1(int n)
	    {
		
		sum=sum+n;
		if(n>0) 
		{
			n--;
		    sum1(n);
		}
	     return sum;
	}
	
}
